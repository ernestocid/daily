<p id="notice"><%= notice %></p>

<p>
<strong>Name:</strong>
<%= @team.name %>
</p>

<p>
<strong>Leader:</strong>
<%= @team.leader.email %>
</p>

<p>
<strong>Members:</strong>
<% @team.members.each do |member| %>
  <li><%= member.email %></li>
<% end %>
</p>

<br>
<br>
<strong>Add members to team</strong>
<br>
<br>

<%= simple_form_for([@team, @team.members.build], url: add_member_team_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id, :collection => @users, :label_method => :email, :value_method => :id, :label => "New Member", :include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Add Member to Team' %>
  </div>
<% end %>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
